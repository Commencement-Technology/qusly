{
  "name": "typescript-react-express",
  "version": "1.0.0",
  "description": "A boilerplate for writing well-ordered web applications with TypeScript, React, HMR and Express",
  "keywords": [
    "typescript",
    "react",
    "express",
    "webpack",
    "nodejs",
    "boilerplate",
    "css",
    "react-hot-loader",
    "hot-module-replacement"
  ],
  "author": {
    "name": "Miko≈Çaj Palkiewicz",
    "email": "xnerhu@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xnerhu/typescript-react-express.git"
  },
  "bugs": {
    "url": "https://github.com/xnerhu/typescript-react-express#issues"
  },
  "main": "./server.bundle.js",
  "scripts": {
    "prod": "node ./server.bundle.js",
    "start": "nodemon ./server.bundle.js",
    "watch": "concurrently \"npm run clear\" \"npm run watch-client\" \"npm run watch-server\" ",
    "watch-client": "webpack-dev-server --config webpack.config.client.dev",
    "watch-server": "webpack --config webpack.config.server.js --watch --mode development",
    "build": "concurrently \"npm run build-client\" \"npm run build-server\"",
    "build-client": "concurrently \"npm run clear\" \"webpack --config webpack.config.client.prod.js\"",
    "build-server": "webpack --config webpack.config.server.js --mode production",
    "clear": "rimraf build"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/express": "4.16.0",
    "@types/react": "16.4.14",
    "@types/react-dom": "16.0.8",
    "@types/react-router-dom": "^4.3.1",
    "awesome-typescript-loader": "5.2.1",
    "concurrently": "4.0.1",
    "html-webpack-plugin": "3.2.0",
    "nodemon": "1.18.4",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-hot-loader": "4.3.11",
    "react-router-dom": "^4.3.1",
    "rimraf": "2.6.2",
    "styled-components": "3.4.9",
    "typescript": "3.1.3",
    "url-loader": "^1.0.1",
    "webpack": "4.22.0",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "express": "4.16.4"
  }
}
